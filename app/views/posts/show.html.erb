<div class="container" style="margin-top: 50px; color: rgba(117, 117, 117, 1);">
  <%# <p id="notice"><%= notice %></p>
  <div class=" d-flex justify-content-between header-post-show" >
    <div class="row">
      <div>
        <img style="width: 50px" src="https://i.ibb.co/CB3Yj2k/user.png" alt="user" border="0">
      </div>
      <div class="header-post-show-username">
         <p style="font-size:20px; font-weight: 600"><%=@post.user.username %></p>
         <p  style="font-size: 15px;"><%= @post.created_at.strftime("%b %e") %>  .  <%= @post.reading_time(@post.body) %> min read</p>
      </div>
    </div>
    <div>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>

  <p style="font-size:35px; font-weight: 800; ">
    <%= @post.title %>
  </p>

  <p id="body-post">
    &emsp; &nbsp;&nbsp; <%= @post.body %>
  </p>

  <div id="comments">
    <h3>Responses</h3>
    <button type="button" class="btn" id="add-response" data-toggle="modal" data-target="#exampleModal">
      what your thoughts?
    </button>
    <%= render @post.comments %>
  </div>



  



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    <% if current_user %>
      <div class="modal-body" style="height: 30vh;">
        <div class="row modal-user">
        <div>
          <img style="width: 50px" src="https://i.ibb.co/CB3Yj2k/user.png" alt="user" border="0">
        </div>
        <div class="header-post-show-username" style="padding-top: 10px;">
          <p style="font-size:20px; font-weight: 600"><%= current_user.username %></p>
        </div>
      </div>
        <%= render partial: "comments/form", locals: {comment: @post.comments.new} %>
    <% else %>
      <div class="modal-body" >
        <p class="text-center" style="font-size: 15px;"> You need to sign in first </p>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>


