<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "new-post-title" %>
    <%= form.text_field :title, id: :post_title, class: "form-control", style:"border-radius: 0px;" %>
  </div>

  <div class="field">
    <%= form.label :body, class: "new-post-title" %>
    <%= form.text_area :body, id: :post_body, class: "form-control", style:"border-radius: 0px; height: 45vh;" %>
  </div>
  <div class="row d-flex justify-content-end" style="margin-top: 40px; margin-right: 10px;">
    <div class="actions">
      <%= link_to 'Back', posts_path, class: "btn btn-primary", style: "color: white; margin-right: 10px;" %>
      <%= form.submit "create post", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
