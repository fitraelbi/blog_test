<%= form_for [@post, comment] do |f| %>
  

    <div class="form-group field" style="margin-top: 1vh;">
        <%= f.text_area :content, class: "form-control", style: "height: 13vh; border-radius: 0px;" %>
    </div>

    <div class="float-right actions" style="margin-top: 1vh;">
        <%= f.submit "respond", class: 'btn btn-success' %>
    </div>
<% end %> 